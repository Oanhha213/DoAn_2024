@model X.PagedList.IPagedList<DoAnNet7_2.Models.Taikhoan>
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<table class="table mt2">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Email
            </th>
@*            <th>
                Mật khẩu
            </th>*@
            <th>
                Số điện thoại
            </th>
            @*            <th>
            @Html.DisplayNameFor(model => model.Madatlaimatkhau)
            </th>*@
@*            <th>
                Loại tài khoản
            </th>*@
            <th>
                Tuỳ chọn
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            var stt = (Model.PageNumber - 1) * Model.PageSize + 1;
        }
        @foreach (var item in Model)
        {
            <tr>
@*                <td>
                    @Html.DisplayFor(modelItem => item.IdTk)
                </td>*@
                <td>
                    @stt
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hoten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
@*                <td>
                    @Html.DisplayFor(modelItem => item.Matkhau)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Sdt)
                </td>
                @*            <td>
            @Html.DisplayFor(modelItem => item.Madatlaimatkhau)
            </td>*@
@*                <td>
                    @Html.DisplayFor(modelItem => item.IdLtkNavigation.Tenltk)
                </td>*@
                <td>
                    <a class="btn btn-info" asp-action="DSCVUngVien" asp-controller="CV" asp-route-IdTK="@item.IdTk">Danh sách CV</a>
                    <a class="btn btn-secondary" asp-action="DSBTDUngTuyen" asp-controller="TKNguoiTimViec" asp-route-idTK="@item.IdTk">Bài viết đã ứng tuyển</a>
                    <a class="btn btn-success" asp-action="BaiVietDaThich" asp-controller="TKNguoiTimViec" asp-route-idTK="@item.IdTk">Bài viết đã thích</a>
                    @*<a asp-action="Delete" asp-route-id="@item.IdTk">Delete</a>*@
                </td>
            </tr>
           stt++;
        }
    </tbody>
</table>
@if (!string.IsNullOrEmpty(ViewBag.NoResultsMessage))
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.NoResultsMessage
    </div>
}

@if (Model.TotalItemCount > 8)
{
    <div class="row">
        <div class="col-sm-12 ">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("DSNguoiTimViec", new { page, searchTerm = ViewBag.searchTerm }), new PagedListRenderOptions
                {
                LiElementClasses = new List<string> { "page-item" },
                PageClasses = new List<string> { "page-link" }
                })
                </ul>
            </nav>
        </div>
    </div>
}
