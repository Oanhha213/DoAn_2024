@model DoAnNet7_2.Models.Baituyendung
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ThemBTDCongTy";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Bài tuyển dụng</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="ThemBTDCongTy" asp-controller="BaiTuyenDung" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tencongviec" class="control-label"></label>
                <input asp-for="Tencongviec" class="form-control mt1" />
                <span asp-validation-for="Tencongviec" class="text-danger"></span>
            </div>
            <div class="form-group mt2">
                <label asp-for="Diachi" class="control-label"></label>
                <input asp-for="Diachi" class="form-control mt1" />
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
            <div class="form-group mt2">
                <label asp-for="IdTt" class="control-label"></label>
                <select asp-for="IdTt" class="form-control mt1" asp-items="ViewBag.IdTt"></select>
            </div>
            <div class="form-group mt2">
                <label asp-for="IdLcv" class="control-label"></label>
                <select asp-for="IdLcv" class ="form-control mt1" asp-items="ViewBag.IdLcv"></select>
            </div>
            <div class="form-group mt2">
                <label asp-for="IdLuong" class="control-label"></label>
                <select asp-for="IdLuong" class="form-control mt1" asp-items="ViewBag.IdLuong"></select>
            </div>
            <div class="form-group mt2">
                <label asp-for="IdNn" class="control-label"></label>
                <select asp-for="IdNn" class ="form-control mt1" asp-items="ViewBag.IdNn"></select>
            </div>
            <div class="form-group mt2">
                <label asp-for="Motacongviec" class="control-label"></label>
                <textarea asp-for="Motacongviec" class="form-control mt1 minht200" id="moTaCongViec"></textarea>
                <span asp-validation-for="Motacongviec" class="text-danger"></span>
            </div>
            <div class="form-group mt2">
                <label asp-for="IdTgkn" class="control-label"></label>
                <select asp-for="IdTgkn" class ="form-control mt1" asp-items="ViewBag.IdTgkn"></select>
            </div>
            <div class="form-group mt2">
                <label asp-for="Yeucaukhac" class="control-label"></label>
                <textarea asp-for="Yeucaukhac" class="form-control mt1 minht150" id="yeuCauKhac"></textarea>
                <span asp-validation-for="Yeucaukhac" class="text-danger"></span>
            </div>
            <div class="form-group mt2">
                <label asp-for="Quyenloi" class="control-label"></label>
                <textarea asp-for="Quyenloi" class="form-control mt1 minht200" id="quyenLoi"></textarea>
                <span asp-validation-for="Quyenloi" class="text-danger"></span>
            </div>
            <div class="form-group mt2">
                <label asp-for="Hannopcv" class="control-label">
                    Hạn nộp hồ sơ
                    (<span style="color: red">*</span>)
                </label>
                <input asp-for="Hannopcv" type="text" class="form-control mt1 minht200" id="hannopcv" readonly />
                <span asp-validation-for="Hannopcv" class="text-danger"></span>
            </div>
            <div class="form-group mt2">
                <label asp-for="IdTtht" class="control-label"></label>
                <select asp-for="IdTtht" class="form-control mt1" asp-items="ViewBag.IdTtht"></select>
            </div>
            <div class="form-group mt2">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
                <a class="btn btn-danger" asp-action="DSBTDCongTy" asp-controller="TKNhaTuyenDung" asp-route-idTK="@ViewBag.IdTk">Huỷ</a>
            </div>

        </form>
    </div>
</div>
<script>
    $(function () {
        var today = new Date(); // Lấy ngày hiện tại
        var dd = String(today.getDate()).padStart(2, '0'); // Lấy ngày
        var mm = String(today.getMonth() + 1).padStart(2, '0'); // Lấy tháng (lưu ý rằng tháng bắt đầu từ 0)
        var yyyy = today.getFullYear(); // Lấy năm
        var minDate = dd + '-' + mm + '-' yyyy; // Định dạng ngày tháng năm
        $("#hannopcv").datepicker({
            minDate: minDate, // Chỉ cho phép chọn từ hôm nay trở đi
            dateFormat: 'dd-mm-yyyy' // Định dạng ngày:
        });
    });
</script>
