                </td>*@
               @* <td>
                    <a class="btn btn-success" asp-action="SuaCongTy" asp-route-IdTK="@item.IdTk" asp-controller="TKNhaTuyenDung">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <a class="btn btn-danger" asp-action="SuaCongTy" asp-route-IdTK="@item.IdTk" asp-controller="TKNhaTuyenDung">
