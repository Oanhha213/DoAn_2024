@model X.PagedList.IPagedList<DoAnNet7_2.Models.Baituyendung>
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@foreach (var item in Model)
{
    <div class="border-content col-md-12 row" style="margin-top: 20px; justify-content: space-between">
        <div class="col-md-8">
            <h5>
                @item.Tencongviec
            </h5>
            @if (item.Diachi != null || item.IdTtNavigation?.Tentt != null)
            {
                <p>
                    <i class="fa-solid fa-location-dot"></i>
                    @item.Diachi, @item.IdTtNavigation?.Tentt
                </p>
            }
            <p>
                <span>
                    @item.IdLcvNavigation?.Tenlcv
                </span>
                |
                <span>
                    @item.IdLuongNavigation?.Tenmucluong
                </span>
            </p>
        </div>
        <div class="col-md-4 row" style="justify-content: end;">
            <a class="btn btn-success col-md-10" style="height: fit-content; line-height: 26px;max-width: fit-content;">Ứng tuyển ngay</a>
            <a class=" col-md-2" style="height: fit-content; line-height: 22px;max-width: fit-content;
                                            cursor: pointer;
                                            margin: 12px !important;
                                            padding: 0 !important;">
                <i class="fa-regular fa-heart" style="color: #fe91ab; font-size: x-large"></i>
            </a>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.NoResultsMessage))
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.NoResultsMessage
    </div>
}
@if (Model.TotalItemCount > 8)
{
    <div class="row mt2">
        <div class="col-sm-12">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new {page, searchTerm = ViewBag.SearchTerm }), new PagedListRenderOptions
                {
                LiElementClasses = new List<string> { "page-item" },
                PageClasses = new List<string> { "page-link" }
                })
                </ul>
            </nav>
        </div>
    </div>
}