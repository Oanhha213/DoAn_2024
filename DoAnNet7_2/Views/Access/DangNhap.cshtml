@model Taikhoan
@{
    ViewData["Title"] = "DangNhap";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="~/assets/css/Login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/642d846c81.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/37.0.0/classic/ckeditor.js"></script>
</head>
<body>
    <div class="container">
        <div class="row" style="justify-content: center; align-items: center; height: inherit; ">
            <div class="col-md-6" style="background-color: #fff; border-radius: 10px; padding: 0 !important">
                <div class="login100-form-title" style="background-image: url('/assets/images/bg-01.jpg'); ">
                    <span class="login100-form-title-1">
                        ĐĂNG NHẬP
                    </span>
                </div>
                <div style="padding: 40px">
                    @using (Html.BeginForm("DangNhap", "Access", FormMethod.Post))
                    {
                        @* Display error message *@
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        <div class="form-group" style="margin-top: 25px">
                            @Html.TextBoxFor(x=>x.Email, new{@class="form-control form-control-lg",placeholder="Email",required="required", type="email", autofocus="autofocus"})
                        </div>
                        <div class="form-group " style="margin-top: 30px">
                            @Html.TextBoxFor(x=>x.Matkhau, new{@class="form-control form-control-lg",placeholder="Mật khẩu",required="required",type = "password",autofocus="autofocus"})
                        </div>
                        <button class="btn-dang-nhap" href="">ĐĂNG NHẬP</button>
                    }
                    <div style="text-align:center; margin-top: 20px">
                        Bạn chưa có tài khoản? <a asp-action="DangKy" asp-controller="DangKy">Đăng ký ngay tại đây!</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>