@model DoAnNet7_2.Models.Soyeulylich

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ThemCV</title>
</head>
<body>

<h4>Tải lên CV của bạn</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ThemCV" enctype="multipart/form-data" method="post" asp-controller="NguoiTimViec">
            <div class="form-group">
                <label asp-for="Tensyll" class="control-label"></label>
                <input asp-for="Tensyll" class="form-control" />
                <span asp-validation-for="Tensyll" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cvFile" class="control-label"></label>
                <input asp-for="cvFile" class="form-control" type="file" id="cvFile" name="cvFile" />
                <span asp-validation-for="cvFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tải lên CV" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhSachCV" asp-controller="NguoiTimViec">Huỷ</a>
</div>
</body>
</html>
