@model DoAnNet7_2.Models.Soyeulylich

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ThemCV</title>
    <link rel="stylesheet" href="~/assets/css/SignUp.css">
    <link rel="stylesheet" href="~/assets/css/Admin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/642d846c81.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/37.0.0/classic/ckeditor.js"></script>
</head>
<body>
    <div class="container">
        <div class="row" style="justify-content: center; align-items: center; height: inherit">
            <div class="col-md-6" style="background-color: #fff; border-radius: 10px; padding: 30px">
                <h3 style="text-align: center; margin-bottom: 30px !important">Tải lên CV của bạn</h3>
                <form asp-action="ThemCV" enctype="multipart/form-data" method="post" asp-controller="NguoiTimViec">
                    <div class="form-group">
                        <label asp-for="Tensyll" class="control-label">
                            Tên CV(thường là vị trí ứng tuyển)
                            (<span style="color: red">*</span>)
                        </label>
                        <input asp-for="Tensyll" class="form-control" required />
                        <span asp-validation-for="Tensyll" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="cvFile" class="control-label"></label>
                        <input asp-for="cvFile" class="form-control" type="file" id="cvFile" name="cvFile" />
                        <span asp-validation-for="cvFile" class="text-danger"></span>*@
                        <label asp-for="cvFile" class="control-label">
                            File CV(pdf)
                            (<span style="color: red">*</span>)
                        </label>
                        <input asp-for="cvFile" class="form-control" type="file" id="cvFile" name="cvFile" required />
                        <span asp-validation-for="cvFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Tải lên CV" class="btn btn-primary" style="width: fit-content"/>
                        <a class="btn btn-danger" asp-action="NguoiTimViec" asp-controller="NguoiTimViec">Bỏ qua</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    document.getElementById('cvFile').addEventListener('change', function () {
        var fileInput = this;
        var filePath = fileInput.value;
        var allowedExtensions = /(\.pdf)$/i;
        if (!allowedExtensions.exec(filePath)) {
            alert('Chỉ cho phép tệp PDF.');
            fileInput.value = '';
            return false;
        }
    });
</script>