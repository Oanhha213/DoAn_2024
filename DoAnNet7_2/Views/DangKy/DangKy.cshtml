@model DoAnNet7_2.Models.Taikhoan

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangKy</title>
    <link rel="stylesheet" href="~/assets/css/SignUp.css">
    <link rel="stylesheet" href="~/assets/css/Admin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/642d846c81.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/37.0.0/classic/ckeditor.js"></script>
</head>
<body>
      
    <div class="container">
        <div class="row" style="justify-content: center; align-items: center; height: inherit">
            <div class="col-md-6" style="background-color: #fff; border-radius: 10px; padding: 30px">
                <h3 style="text-align: center; margin-bottom: 30px">ĐĂNG KÝ</h3>
                <form asp-action="DangKy" method="post">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Hoten" class="control-label">
                            Họ tên
                            (<span style="color: red">*</span>)
                        </label>
                        <input asp-for="Hoten" class="form-control" required />
                        <span asp-validation-for="Hoten" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">
                            Email
                            (<span style="color: red">*</span>)
                        </label>
                        <input asp-for="Email" class="form-control" type="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Matkhau" class="control-label">
                            Mật khẩu
                            (<span style="color: red">*</span>)
                        </label>
                        <input asp-for="Matkhau" class="form-control" type="password" required />
                        <span asp-validation-for="Matkhau" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdLtk" class="control-label">
                            Loại  tài khoản
                            (<span style="color: red">*</span>)
                        </label>
                        <select asp-for="IdLtk" class="form-control" asp-items="ViewBag.IdLtk" required></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Đăng ký" class="btn btn-primary" style="max-width: fit-content;" />
                        <a class="btn btn-danger" asp-action="Index" asp-controller="Home">Huỷ</a>
                    </div>
                </form>
                <div style="text-align:center">
                    Bạn đã có tài khoản? <a asp-action="DangNhap" asp-controller="Access">Đăng nhập ngay tại đây!</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
